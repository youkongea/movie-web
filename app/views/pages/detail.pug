extends ../layout
block content
    .container
        .row
            .col-md-7
                embed(src=`${movie.flash}`, allowFullScreen="true",quality="high", width="720", height="600", align="middle",type="application/x-shockwave-flash")
                .panel.panel-default
                    .panel-heading
                        h3 评论区
                    .panel-body
                        ul.media-list
                            each item in comments
                                li.media
                                    .media-body
                                        h4.media-heading #{item.from.name}
                                        p #{item.content}
                                    hr
                form(method="post", action="/user/comment")
                    input(type="hidden", name="comment[movie]", value=`${movie._id}`)
                    input(type="hidden", name="comment[from]", value=user._id)
                    .form-group
                        textarea.form-control(name="comment[content]", rows="3")
                    button.btn.btn-default(type="submit") 提交
            .col-md-5
                dl.dl-horizontal
                    dt 电影名字
                    dd=movie.title
                    dt 导演
                    dd=movie.doctor
                    dt 国家
                    dd=movie.country
                    dt 语言
                    dd=movie.language
                    dt 上映时间
                    dd=movie.year
                    dt 简介
                    dd=movie.summary
